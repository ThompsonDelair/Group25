{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source" : "/[Ff][Oo][Oo]",
        "destination" : "/Foo",
        "type" : 301
      },
      {
        "source": "/firebase/*",
        "destination": "https://www.firebase.com",
        "type": 302
      }
    ]
  }
}
